<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:background="@color/bg_frag">

    <ImageView
        android:padding="@dimen/_5sdp"
        android:src="@drawable/icon_singer"
        android:id="@+id/txtTittleNameArt_itemArt"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtNameArt_itemArt"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toEndOf="@+id/txtTittleNameArt_itemArt"
        android:text="Nơi tình yêu bắt dầu"
        android:textColor="#fff"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSumSong_itemArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameArt_itemArt"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toEndOf="@+id/txtTittleNameArt_itemArt"
        android:text="3 bài hát"
        android:textColor="#fff" />

</RelativeLayout>